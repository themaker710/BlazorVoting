@page "/"
@inject NavigationManager Navigation
@using PollAppHosted.Shared;


<MudAlert Severity="Severity.Info" Color="Color.Primary">
    <MudText Typo="Typo.h3">Welcome to Poll App</MudText>
    <MudText>Click on the button below to get started.</MudText>
</MudAlert>

<MudButton Color="Color.Primary" Variant="Variant.Filled" Class="mt-4">
    <MudIcon Icon="@Icons.Material.Filled.Login" />
    <MudText>Login</MudText>
</MudButton>

@code {
    protected override async Task OnInitializedAsync()
    {
        Navigation.NavigateTo("response");
    }
}