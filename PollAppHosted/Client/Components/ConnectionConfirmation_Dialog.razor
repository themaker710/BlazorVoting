
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.ConnectWithoutContact" Class="mr-3" /> Connect to Session @sesscode
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="uname" Class="mt-3" Label="Name" HelperText="Optional" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Success" OnClick="Submit" Class="px-10">Continue</MudButton>
        <MudButton Variant="Variant.Filled" Class="px-10" OnClick="() => MudDialog.Cancel()">Cancel</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public int sesscode { get; set; }
    private string uname { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(uname));

}
